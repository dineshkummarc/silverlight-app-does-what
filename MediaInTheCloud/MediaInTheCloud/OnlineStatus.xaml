<UserControl x:Class="MediaInTheCloud.OnlineStatus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        
        <Ellipse Width="20" Height="20" Fill="#00EE00" StrokeThickness="0" x:Name="onlineBulb">
            <Ellipse.Effect>
                <DropShadowEffect Color="#00EE00" Direction="0" ShadowDepth="0" BlurRadius="10"/>
            </Ellipse.Effect>
        </Ellipse>
        <Ellipse Width="20" Height="20" Fill="Red" Opacity="1" Margin="5 0 0 0" StrokeThickness="0" x:Name="offlineBulb">
            <Ellipse.Effect>
                <DropShadowEffect Color="Red" Direction="0" ShadowDepth="0" BlurRadius="10"/>
            </Ellipse.Effect>
        </Ellipse>

    </StackPanel>
</UserControl>
